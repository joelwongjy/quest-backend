{
  "name": "quest-backend",
  "version": "0.0.1",
  "description": "Backend for Quest",
  "private": true,
  "main": "index.ts",
  "repository": "https://github.com/dsc-team-quest/backend",
  "author": "Team Quest",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "date-fns": "^2.22.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.2.30"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/faker": "^5.5.6",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/lodash": "^4.14.170",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.12.4",
    "@types/supertest": "^2.0.11",
    "cross-env": "^7.0.3",
    "faker": "^5.5.3",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "prettier": "^2.3.1",
    "pretty-quick": "^3.1.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.4"
  },
  "scripts": {
    "lint": "prettier --write \"src/**/*.{ts,tsx}\" --tab-width 2",
    "start": "set debug=* && cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only ./src/index.ts",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit",
    "test:ci": "jest --verbose --forceExit --runInBand",
    "coverage": "yarn test --coverage",
    "production": "cd build && cross-env NODE_ENV=production node ./src/index.js",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "prepare": "node -e \"if(require('fs').existsSync('.git')){process.exit(1)}\" || is-ci || husky install"
  }
}
